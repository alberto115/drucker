{
    "name": "abesiyo/drucker",
    "description": "Docker + drupal composer stack",
    "type": "project",
    "license": "GNU GPLv3",
    "minimum-stability": "dev",
    "authors": [
        {
            "name": "Alberto Contreras",
            "email": "abecontreras@me.com"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "require": {
        "composer/installers": "^1.2",
        "drupal-composer/drupal-scaffold": "^2.2",
        "cweagans/composer-patches": "~1.0",
        "drupal/core": "~8.2",
        "drush/drush": "~8.0",
        "drupal/console": "~1.0"
    },
    "require-dev": {},
    "prefer-stable": true,
    "extra": {
        "installer-paths": {
            "src/core": [
                "type:drupal-core"
            ],
            "src/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "src/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "src/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "patches": { }
    }
}
